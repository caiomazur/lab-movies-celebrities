<h2>Edit the Movie</h2>

<form action="/movies/{{movie._id}}" method="post">
  <label for="title">Title:</label>
  <input name="title" id="title" type="text" value="{{movie.title}}" />

  <label for="genre">Genre:</label>
  <input name="genre" id="genre" type="text" value="{{movie.genre}}" />

  <label for="plot">Plot:</label>
  <input name="plot" id="plot" type="text" value="{{movie.plot}}" />

  <label for="cast">Cast:</label>
  <select name="cast" id="cast">
    {{#each celebrities}}
      <option value="{{_id}}">{{name}}</option>
    {{/each}}
  </select>

  <button type="submit">Submit</button>

</form>